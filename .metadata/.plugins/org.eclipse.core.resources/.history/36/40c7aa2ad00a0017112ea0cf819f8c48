    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>HTML File API</title>
<script>
	function readFile(){
		if(!window.File || !window.FileReader){
			alert('File API가 지원되지 않습니다');
			return 
		}
		
		var files = document.getElementById('file').files;
		if(!files.length){
			alert('파일을 선택하시오!');
			return
		}
		
		output = "";
		var file = files[0];
		
		output += file.name + "\n";
		output += file.type + "\n";
		output += file.size + "bytes\n";
		output += file.lastModifiedDate + "\n";
		
		console.log(file.value);
		document.getElementById('result').innserHTML = output;
	}
</script>
</head>
<body>
	<input type="file" id="file" name="file">
	<button id="readfile" onClick="readFile()">업로드</button><br/>
	<div id="postView"></div>
	<textarea id="result" rows="6" cols="60"></textarea>
</body>
</html>